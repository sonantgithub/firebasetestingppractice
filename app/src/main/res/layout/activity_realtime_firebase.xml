<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RealtimeFirebase">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Employee ID"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/rfotxtone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Employee ID"
            android:inputType="number"
            android:textSize="15dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Employee name"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/rfotxttwo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Employee name"
            android:inputType="text"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Employee email"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/rfotxtthree"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Employee email"
            android:inputType="textEmailAddress"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Select DOB"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/datethree"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="textEmailAddress"
            android:onClick="setDate"
            android:text="select date"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:text="yes"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

        <CheckBox
            android:id="@+id/cheackboxone"
            android:layout_width="37dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:text="no"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

        <CheckBox
            android:id="@+id/cheackboxtwo"
            android:layout_width="37dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:onClick="uplodedata"
            android:text="uplode data"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:onClick="editdata"
            android:text="edit update"

            />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="nextactivity"
        android:text="next"
        />


</LinearLayout>